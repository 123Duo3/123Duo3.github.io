:root
  --color alpha(#000, 0.82)
  --color-secondary alpha(#000, 0.6)
  --color-tertiary alpha(#000, 0.4)
  --hover alpha(#000, 0.04)
  --active alpha(#FFF, 0.25)
  --background #F7F8FB
  --background-transparent #F7F8FB99
  --item-background alpha(#FFF, 0.8)
  --item-background-hover alpha(#FFF, 0.97)
  --stroke alpha(#000, 0.05)
  --stroke-solid #dde2e4
  --horizontal-line alpha(#000, 0.1)
@media (prefers-color-scheme: dark)
  :root
    --color alpha(#FFF, 0.82)
    --color-secondary alpha(#FFF, 0.6)
    --color-tertiary alpha(#FFF, 0.4)
    --hover alpha(#FFF, 0.04)
    --active alpha(#000, 0.1)
    --background #1D1E1F
    --background-transparent #1D1E1F1A
    --item-background alpha(#FFF, 0.05)
    --item-background-hover alpha(#FFF, 0.15)
    --stroke alpha(#FFF, 0.05)
    --stroke-solid #323437
    --horizontal-line alpha(#FFF, 0.1)

@font-face 
  font-family: InterVariable
  src: url(../fonts/InterVariable.woff2) format("woff2")
  font-style: normal

@font-face
  font-family: InterVariable
  src: url(../fonts/InterVariable-Italic.woff2) format("woff2")
  font-style: italic

@media (min-width: 768px) 
  @font-face
    font-family: MiSans
    src: url(../fonts/MiSans-Normal.woff2) format("woff2")
    font-style: normal
    font-weight: normal

@media (max-width: 768px) 
  @font-face
    font-family: MiSans
    src: url(../fonts/MiSans-Regular.woff2) format("woff2")
    font-style: normal
    font-weight: normal

@font-face
  font-family: MiSans
  src: url(../fonts/MiSans-Bold.woff2) format("woff2")
  font-style: normal
  font-weight: bold

@font-face
  font-family: MiSans
  src: url(../fonts/MiSans-Demibold.woff2) format("woff2")
  font-style: normal
  font-weight: 500

@font-face
  font-family: JetBrainsMono
  src: url(../fonts/JetBrainsMono-Regular.woff2) format("woff2")
  font-style: normal
  font-weight: normal

@font-face
  font-family: JetBrainsMono
  src: url(../fonts/JetBrainsMono-Bold.woff2) format("woff2")
  font-style: normal
  font-weight: bold

@font-face
  font-family: JetBrainsMono
  src: url(../fonts/JetBrainsMono-Italic.woff2) format("woff2")
  font-style: italic
  font-weight: normal

@font-face
  font-family: JetBrainsMono
  src: url(../fonts/JetBrainsMono-BoldItalic.woff2) format("woff2")
  font-style: italic
  font-weight: bold



body
  margin 0
  line-height: 1.5em
  color: var(--color)
  background-color: var(--background)
  font-family: InterVariable, MiSans, system-ui, -apple-system, BlinkMacSystemFont, sans-serif
@media (min-width: 768px) 
  body
    overflow-y: hidden
    font-size: 17px

p
  text-indent:2em

h1 
  font-size: 2em
  font-weight: 400
  line-height: 1.25em
  margin: 0
  padding: 0

h2
  font-size: 2em
  line-height: 1.5em
  font-weight: 400
  margin: 0
  margin-block-start: 1em
  margin-block-end: 0em

h3
  font-size: 1.5em
  line-height: 1.5em
  font-weight: 500
  margin: 0
  margin-block: 0.5em

h4
  font-size: 1.25em
  font-weight: 500
  margin: 0
  margin-block: 0.5em

h5
  font-size: 1em
  line-height: 2em
  font-weight: 700
  margin: 0
  padding: 0

h6
  font-size: 0.875em
  line-height: 2em
  font-weight: 700
  margin: 0
  padding: 0

a
  color: var(--color)
  &:hover
    color: var(--color-secondary)

hr
  border: none
  border-top: 1.5px solid var(--horizontal-line)
  margin: 0
  padding: 0

blockquote
  background: var(--hover)
  border-radius: 8px
  -webkit-border-radius: 8
  -moz-border-radius: 8
  margin-block: 1em
  margin-inline: 0
  padding-inline: 2em
  padding-block: 0.1em
  color: var(--color-secondary)

figure
  margin: 0
  padding: 0

p img
  max-width: 100%
  height: auto
  max-height: calc(100vh - 48px - var(--scrollbar-height))
  border-radius: 8px
  -webkit-border-radius: 8
  -moz-border-radius: 8
  margin: 0
  display: block

blockquote footer
  text-align: right
  padding-block: 1em
  width 100%

blockquote footer strong
  font-weight: 500
  color: var(--color)

blockquote footer cite
  font-style: normal
  font-weight: 500
  padding-inline-start: 0.5em
  color: var(--color-tertiary)

blockquote footer cite a
  color: var(--color-tertiary)
  &:hover
    color: var(--color-secondary)
  overflow-wrap: anywhere

blockquote p a
  color: var(--color-secondary)
  &:hover
    color: var(--color)

ol, ul
  padding-inline-start: 2em

ul
  list-style-type: disc

ol p, ul p
  text-indent: 0

ol p + p, ul p + p
  text-indent: 2em

li::marker
  color: var(--color-tertiary)

kbd
  padding-inline: 0.25em
  border-radius: 4px
  -webkit-border-radius: 4
  -moz-border-radius: 4
  color: var(--color-secondary)
  font-family: JetBrainsMono, monospace
  font-size: 0.875em
  line-height: 1.25em
  font-weight: 500
  border: 1.5px solid var(--horizontal-line)

code
  padding-inline: 0.5em
  color: var(--color-secondary)
  font-family: JetBrainsMono, monospace
  font-size: 0.875em
  line-height: 1.25em
  font-weight: 500
  border-radius: 4px
  -webkit-border-radius: 4
  -moz-border-radius: 4
  background: var(--hover)

table
  width: 100%
  border-collapse: collapse
  border-radius: 8px
  -webkit-border-radius: 8
  -moz-border-radius: 8
  box-shadow: inset 0 0 0 1.5px var(--stroke-solid)
  overflow: hidden
  margin-block: 1em

th, td
  padding: 0.5em
  border-right: 1.5px solid var(--stroke-solid)
  border-collapse: collapse

td
  border-top: 1.5px solid var(--stroke-solid)

td:last-child, th:last-child
  border-right-color: transparent;

th
  background: var(--hover)
  font-weight: 500
  text-align: left
  



.text-meta
  font-size: 1em
  line-height: 1.25em
  font-weight: 500
  & .post-date
    color: var(--color)

.post-tag
  color: var(--color-tertiary)
  text-decoration: none
  &:hover
    text-decoration: underline
    color: var(--color-secondary)
  font-weight: 500

.post-tag-separator
  color: var(--color-tertiary)
  font-weight: 500
  user-select: none
  -webkit-user-select: none

.post-date
  color: var(--color-tertiary)
  font-weight: 500

.excerpt
  color: var(--color-secondary)

.page-foot
  color: var(--color)
  font-weight: 500
  height:calc(100% - var(--scrollbar-height))
  break-inside:avoid
  display: flex
  flex-direction: column
  justify-content: flex-end
  padding-left: 64px

.first-space
  height: 15vh

@media (max-width: 768px) 
  .page-foot
    height: 256px
    padding-left: 0
    text-align:right
    max-width: 24em
    margin-inline: auto



.material-symbols-outlined 
  //color: var(--color-secondary)
  font-variation-settings:
    'FILL' 0,
    'wght' 400,
    'GRAD' 0,
    'opsz' 24
  user-select: none
  -webkit-user-select: none



.header-outer
  position: fixed
  top: 0
  left: 0
  width 256px
  height: 100vh 
  z-index: 100
  background-color: var(--background-transparent)
  box-sizing: border-box
  backdrop-filter: blur(64px)

.header-inner
  padding: 36px
  display: flex
  flex-direction: column
  justify-content: space-between
  height: calc(100% - 72px)

.logo
  margin-top: 28px
  user-select: none
  -webkit-user-select: none
  text-decoration: none
  border-radius: 8px
  -webkit-border-radius: 8
  -moz-border-radius: 8
.logo-mobile
  display: none
  user-select: none
  -webkit-user-select: none
  text-decoration: none
  border-radius: 8px
  -webkit-border-radius: 8
  -moz-border-radius: 8
  height: 100%
  justify-content: center
  align-items: center
  & picture
    height: 24px
    & img
      height: 24px

.icon-button
  display: flex
  justify-content: center
  align-items: center
  width: 48px
  height: 48px
  margin-top: 12px
  cursor: pointer
  background: alpha(#fff, 0)
  text-decoration: none
  font-variation-settings:
    'FILL' 0,
    'wght' 400,
    'GRAD' 0,
    'opsz' 24
  color: var(--color-secondary)
  &:hover
    background: var(--hover)
    color: var(--color)
  &:active
    background: var(--active)
  &:focus
    box-shadow: inset 0 0 0 2px var(--color)
  border-radius: 8px
  -webkit-border-radius: 8
  -moz-border-radius: 8
  border: none
  outline: none

@media (max-width: 768px) 
  .header-outer
    width: 100%
    height: auto
    padding-top: 8px
    padding-left: 16px
    padding-right: 16px
    padding-bottom: 8px
  .header-inner
    padding: 0
    height: auto
    width: 100%
    flex-direction: row
    justify-content: space-between
  .logo
    display: none
  .logo-mobile
    display: flex
  .post-title
    display: none
  .header-buttons
    display: flex
    flex-direction: row
  .icon-button
    width: 32px
    height: 32px
    margin-top: 0
    margin-left: 16px



.content
  padding: 24px
  height: calc(100vh - 48px - var(--scrollbar-height))
  display: flex
  flex-direction: row

.spacer
  height: 100%
  padding-left: calc(256px + 15%)

.recent-posts
  display: flex
  flex-direction: row

@media (max-width: 768px)
  .content
    width calc(100% - 32px)
    padding: 16px
    height: auto
    flex-direction: column
  .spacer
    padding-left: 0
    padding-top: calc(48px + 20vh)
    height: 0
    width: 100%
  .recent-posts
    flex-direction: column



.recent-post-item
  text-decoration: none
  color: var(--color)
  margin-right: 24px
  background: var(--item-background)
  width 512px
  border-radius: 24px
  -webkit-border-radius: 24
  -moz-border-radius: 24
  padding: 16px
  box-shadow: inset 0 0 0 1px var(--stroke), 0 0 16px alpha(#000, 0.01), 0 4px 8px alpha(#000, 0.01)
  &:hover
    color: var(--color)
    background: var(--item-background-hover)
    box-shadow: inset 0 0 0 1px var(--stroke), 0 0 48px alpha(#000, 0.02), 0 4px 32px alpha(#000, 0.02)
  display: flex
  flex-direction: column
  justify-content: space-between
  & h2
    margin: 0
    padding: 0

.recent-post-item-meta
  display: flex
  flex-direction: row
  align-items: center
  justify-content: space-between

.recent-post-item-text
  margin-left: 8px
  margin-right: 8px

.small-icon
  font-size: 20px;
  line-height: 24px;
  font-weight: 500;
  font-variation-settings: 'OPSZ' 20;

@media (max-width: 768px)
  .recent-post-item
    padding: 12px
    margin-right: 0
    margin-bottom: 16px
    width calc(100% - 32px)
    min-height: 256px
    & h2
      font-size: 1.75em
      //font-weight: 500
  .recent-post-item-meta
    font-size: 0.875em
  

.post
  columns 24em auto
  gap: 64px
  margin-right: 24px
  orphans: 2

.post-content
  width: 24em
  orphans: 2

.post-title-mobile
  display none

.end-mark
  text-align:right
  user-select:none

@media (max-width: 768px)
  .post
    columns auto auto
    gap 0
    margin: 0
    width 100%
    align-content: center
  .post-content
    max-width 24em
    margin: 0 auto
    width 100%
  .post-title-mobile
    display: block
  .end-mark
    text-align: left
    text-indent: 0




.highlight
  background: var(--hover)
  border-radius: 8px
  -webkit-border-radius: 8
  -moz-border-radius: 8
  margin-block: 1em

.highlight table 
  border-collapse: separate
  border: none
  border-radius: 0
  -webkit-border-radius: 0
  -moz-border-radius: 0
  overflow: visible
  box-shadow: none

.highlight table th, .highlight table td
  border: none
  padding: 0
  border-collapse: separate

.gutter
  padding-inline-end: 1em
  color: var(--color-tertiary)

figcaption
  font-size: 0.75em
  font-weight: 600
  padding-block-start: 8px
  padding-inline-start: 2.5em
  margin-block-end: -2em
  letter-spacing: .01em
  

pre
  white-space: pre-wrap
  word-wrap: break-word    
  overflow-wrap: anywhere
  line-break: loose
  font-family: 'JetBrainsMono', monospace
  font-feature-settings: "ss01", "cv03", "zero"
  font-size: 0.875em
  letter-spacing: inherit
  color: var(--color-secondary)
  
.line-numbers
  display: inline-block
  text-indent: -4.5em
  color: var(--horizontal-line)
  user-select: none
  -webkit-user-select: none
  &.marked
    color: var(--color-tertiary)
  &.first
    display: none

.code-line
  margin-inline: -2px
  padding-inline: calc(2em + 2px)
  &.marked
    background: var(--stroke)

@media (max-width: 768px) 
  .code-line
    padding-inline-start: calc(3em + 2px)
    padding-inline-end: calc(1em + 2px)
  .line-numbers
    text-indent: -3em
    &.first
      display: inline-block

.tips-404
  margin-top: 30vh
  margin-inline-start: -256px
  z-index: 101
  position: relative
@media (max-height: 600px) 
  .tips-404
    margin-top: 25vh
    margin-inline-start: calc(-256px + 64px)
@media (max-width: 768px) 
  .tips-404
    margin-inline-start: 0
